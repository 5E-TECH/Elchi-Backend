{
  "name": "elchi-pochta",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start:gateway": "nest start api-gateway --watch",
    "start:identity": "nest start identity-service --watch",
    "start:order": "nest start order-service --watch",
    "start:catalog": "nest start catalog-service --watch",
    "start:logistics": "nest start logistics-service --watch",
    "start:finance": "nest start finance-service --watch",
    "start:notification": "nest start notification-service --watch",
    "start:integration": "nest start integration-service --watch",
    "start:analytics": "nest start analytics-service --watch",
    "start:branch": "nest start branch-service --watch",
    "start:investor": "nest start investor-service --watch",
    "start:file": "nest start file-service --watch",
    "start:c2c": "nest start c2c-service --watch",
    "start:all": "concurrently \"npm run start:gateway\" \"npm run start:identity\" \"npm run start:order\" \"npm run start:catalog\" \"npm run start:logistics\" \"npm run start:finance\" \"npm run start:notification\" \"npm run start:integration\" \"npm run start:analytics\" \"npm run start:branch\" \"npm run start:investor\" \"npm run start:file\" \"npm run start:c2c\"",
    "start:prod:gateway": "node dist/apps/api-gateway/main.js",
    "start:prod:identity": "node dist/apps/identity-service/main.js",
    "start:prod:order": "node dist/apps/order-service/main.js",
    "start:prod:catalog": "node dist/apps/catalog-service/main.js",
    "start:prod:logistics": "node dist/apps/logistics-service/main.js",
    "start:prod:finance": "node dist/apps/finance-service/main.js",
    "start:prod:notification": "node dist/apps/notification-service/main.js",
    "start:prod:integration": "node dist/apps/integration-service/main.js",
    "start:prod:analytics": "node dist/apps/analytics-service/main.js",
    "start:prod:branch": "node dist/apps/branch-service/main.js",
    "start:prod:investor": "node dist/apps/investor-service/main.js",
    "start:prod:file": "node dist/apps/file-service/main.js",
    "start:prod:c2c": "node dist/apps/c2c-service/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./apps/api-gateway/test/jest-e2e.json",
    "migration:generate": "npx typeorm-ts-node-commonjs migration:generate -d typeorm.config.ts",
    "migration:run": "npx typeorm-ts-node-commonjs migration:run -d typeorm.config.ts",
    "migration:revert": "npx typeorm-ts-node-commonjs migration:revert -d typeorm.config.ts",
    "infra:up": "docker compose up rabbitmq postgres -d",
    "infra:down": "docker compose down"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.3",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/microservices": "^11.1.13",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.6",
    "@nestjs/throttler": "^6.5.0",
    "@nestjs/typeorm": "^11.0.0",
    "amqp-connection-manager": "^5.0.0",
    "amqplib": "^0.10.9",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "helmet": "^8.1.0",
    "joi": "^18.0.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.18.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.28"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/common(|/.*)$": "<rootDir>/libs/common/src/$1"
    }
  }
}
